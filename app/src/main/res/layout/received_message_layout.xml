<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receivedMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgReceiverProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_profile"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtReceivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello How are you?"
            android:background="@drawable/received_message_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:maxWidth="280dp"/>

        <TextView
            android:id="@+id/txtReceivedMessageTime"
            android:layout_width="wrap_content"
            android:text="10:00 AM"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="#666666"/>
        <TextView
            android:id="@+id/txtSentMessageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="#666666"/>
    </LinearLayout>
</LinearLayout>