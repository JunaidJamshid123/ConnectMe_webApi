<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="match_parent"
    tools:context=".ContactsPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.9"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:padding="15dp">


            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Junaid Jamshid"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toEndOf="@id/back"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>


            <ImageView
                android:id="@+id/edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:text="Contacts"
            android:textStyle="bold"
            android:textColor="#664242"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_search"
            android:layout_marginEnd="20dp"
            android:background="#5CF1E7E7"
            android:hint="search for Contacts..."
            android:layout_marginTop="15sp"
            android:layout_height="wrap_content">
        </EditText>



            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:text="In Contacts"
                android:textStyle="bold"
                android:textColor="#664242"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
            </TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45sp"
                android:src="@drawable/junaid1"
                android:id="@+id/image1"
                android:layout_height="45sp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Junaid Jamshid"
                android:id="@+id/text1"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image1"
                android:layout_marginTop="10dp">
            </TextView>

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="40dp">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45sp"
                android:src="@drawable/junaid1"
                android:id="@+id/image2"
                android:layout_height="45sp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Junaid Jamshid"
                android:id="@+id/text2"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image2"
                android:layout_marginTop="10dp">
            </TextView>

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="40dp">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45sp"
                android:src="@drawable/junaid1"
                android:id="@+id/image3"
                android:layout_height="45sp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Junaid Jamshid"
                android:id="@+id/text3"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image3"
                android:layout_marginTop="10dp">
            </TextView>

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="40dp">

            </ImageView>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>



</LinearLayout>